{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@shared/teams": ["src/shared/football-team-configs-and-sprite-mappings.ts"],
      "@shared/events": ["src/shared/claude-code-event-stream-types-and-payloads.ts"],
      "@shared/state": ["src/shared/server-session-and-agent-state-interfaces.ts"],
      "@shared/day-night-cycle-configuration-constants": ["src/shared/day-night-cycle-configuration-constants.ts"],
      "@shared/*": ["src/shared/*"],
      "@shared": ["src/shared/ccviz-shared-types-teams-events-state-barrel.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "vite.config.ts"
  ]
}
